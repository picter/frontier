{
  "name": "@picter/pages",
  "version": "0.2.0",
  "description": "Static website generator for picter.",
  "main": "src/index.ts",
  "bin": {
    "pages": "./bin/pages"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --project tslint.json",
    "build:page": "mkdir -p dist && ts-node . organisations/aperture > dist/index.html",
    "build:sass": "node-sass src/styles.sass -o dist/",
    "build:assets": "cp -r organisations/aperture/assets dist",
    "build": "npm run build:sass && npm run build:assets && npm run build:page",
    "server:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts"
  },
  "repository": "git@git.picter.com:picter/pages.git",
  "author": "Richard <hello@noxan.net>",
  "license": "MIT",
  "dependencies": {
    "@picter/elements": "^0.18.1",
    "@types/koa": "^2.0.39",
    "handlebars": "^4.0.6",
    "ini": "^1.3.4",
    "koa": "^2.2.0",
    "koa-send": "^4.1.0",
    "kramed": "^0.5.6",
    "livereload": "^0.6.2",
    "node-sass": "^4.5.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^7.0.13",
    "nodemon": "^1.11.0",
    "sass-lint": "^1.10.2",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "tslint-config-airbnb": "^1.1.1",
    "typescript": "^2.2.2"
  }
}
