{
  "name": "@picter/pages",
  "version": "0.1.0",
  "description": "Static website generator for picter.",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "standard",
    "build:page": "mkdir -p dist && ts-node . organisations/aperture > dist/index.html",
    "build:sass": "node-sass src/styles.sass -o dist/",
    "build:assets": "cp -r organisations/aperture/assets dist",
    "build": "npm run build:sass && npm run build:assets && npm run build:page"
  },
  "repository": "git@git.picter.com:picter/pages.git",
  "author": "Richard <hello@noxan.net>",
  "license": "MIT",
  "dependencies": {
    "@picter/elements": "^0.18.1",
    "handlebars": "^4.0.6",
    "ini": "^1.3.4",
    "kramed": "^0.5.6",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "node-sass": "^4.5.2",
    "sass-lint": "^1.10.2",
    "standard": "^10.0.1",
    "ts-node": "^3.0.2",
    "typescript": "^2.2.2"
  }
}
